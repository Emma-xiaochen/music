/* components/ranking-area-item/index.wxss */
.item {
  display: flex;
  justify-content: space-between;
  /* width: 355px; */
  background-color: #eee;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  /* padding-right: 20rpx; */
}

.content {
  flex: 1;
  /* min-width: 0; */
  overflow: hidden;
  padding: 24rpx;
}

.content-title {
  font-size: 34rpx;
}

.content-list {
  width: 100%;
  font-size: 24rpx;
  margin-top: 6rpx;
}

.content-list-item {
  display: inline-block;
  width: 100%;
  color: #333;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-emphasis: none;
  overflow: hidden;
  margin-top: 6rpx;
}

.content-list-item .singer {
  color: #999;
}

.album {
  position: relative;
  width: 220rpx;
  display: flex;
}

.album .image {
  display: block;
  width: 100%;
  height: 100%;
}

.album .play-counter {
  position: absolute;
  right: 0;
  bottom: 0rpx;
  font-size: 22rpx;
  color: #fff;
  background: rgba(0,0,0,.5);
  border-radius: 12rpx;
  padding: 6rpx 10rpx;
}